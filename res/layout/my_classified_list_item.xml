<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="10dip"
    android:weightSum="3" >

    <ImageView
        android:id="@+id/img_classified_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@null"
        android:background="@color/gray_color"
        android:text="picture" />

    <TextView
        android:id="@+id/txt_ad_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/dimen_16sp"
        android:layout_toRightOf="@+id/img_classified_image"
        android:layout_alignTop="@+id/img_classified_image"
        android:layout_alignBottom="@+id/img_classified_image"
        android:text="Discription details" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ad_description"
        android:id="@+id/ln_layout_date_price"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:weightSum="2" >

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="10000 INR" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textStyle="bold"
            android:text="27-July-2014" />
    </LinearLayout>

</RelativeLayout>