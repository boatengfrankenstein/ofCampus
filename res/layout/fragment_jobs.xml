<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:id="@+id/fragment_jobs" >


    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="@drawable/edit_text_background_selector"
            android:ems="5"
            android:gravity="center_vertical"
            android:hint="Search"
            android:imeOptions="actionNext"
            android:paddingLeft="15dp"
            android:paddingRight="45dp"
            android:singleLine="true"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/search_edit_text"
            android:layout_alignRight="@+id/search_edit_text"
            android:layout_alignTop="@+id/search_edit_text"
            android:background="@null"
            android:padding="5dp"
            android:src="@drawable/search_icon" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_consulting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/black_button_selector"
        android:clickable="true"
        android:padding="10dp"
        android:text="@string/Consulting"
        android:textColor="@color/white_color"
        android:textSize="18sp" />

    <include
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/generic_footer" />

</RelativeLayout>